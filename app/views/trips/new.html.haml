#map

.row
  .large-4.columns
    #instructions
      %h2 Instructions
      %ol
        %li Enter Starting Location
        %li Enter Destination
        %li Click 'Geocode' button
        %a{:id => 'geocode', :class => 'button button-3d-action button-pill'} Geocode

  .large-8.columns
    = simple_form_for :trip, :url => {:action => :create} do |f|
      %fieldset
        .row.trip-info
          .large-4.columns
            = f.input :location_start, label: 'Starting Location'
            = f.hidden_field :lat_local
            = f.hidden_field :lng_local
            = f.input :location_end, label: 'Destination'
            = f.hidden_field :lat_dest
            = f.hidden_field :lng_dest
          .large-4.columns
            = f.input :vehicle
            = f.input :mpg
          .large-4.columns
            = f.input :date, as: :date


        = f.button :submit
