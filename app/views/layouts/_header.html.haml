.top-bar
  %ul.title-area
    %li.name= link_to "Copilot", root_path, id: "logo"
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.divider
        %li= link_to 'Create Trip', trips_new_path
        %li.divider
        %li= link_to "Logged in as #{current_user.email}", current_user
        %li.divider
        %li.has-form.has-dropdown.not-click
          %a.menu(href="#") Menu...
          %ul.dropdown
            %li.divider
            %li= link_to "profile", current_user
            %li.divider
            %li= link_to 'Edit Profile', edit_user_registration_path
            %li.divider
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
            %li.divider
      - else
        %li.divider
        %li= link_to "Sign up", new_user_registration_path
        %li.divider
        %li= link_to "Login", new_user_session_path
        %li.divider
        %li= link_to image_tag("bird.png", :border => 0), user_omniauth_authorize_path(:twitter)
        %li.divider

  /End top bar
